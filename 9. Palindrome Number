class Solution {
public:
    bool isPalindrome(int x) {
        
    int  rem;
        long long int sum = 0;
        int n;
        n = x;
    
            while (x > 0)
             {
                 rem = x % 10;
                 sum = sum*10 + rem;
                 x=x/10;
              }
        
             if (sum==n)
                {
             return true;
             }
        else
        {
            return false;
        }
        
    
    }
};
